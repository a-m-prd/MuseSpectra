<Window x:Class="MuseSpectra.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuseSpectra.Views"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Label>Username:</Label>
            <TextBox Name="UsernameTextBox" Margin="5"/>
            <Label>Password:</Label>
            <PasswordBox Name="PasswordBox" Margin="5"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="10"/>
            <Label Foreground="#FF0395D2">Not registered yet?</Label>
            <Button Content="Register" Click="RegisterButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
