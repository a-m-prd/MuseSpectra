<Window x:Class="MuseSpectra.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuseSpectra.Views"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <CheckBox Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="5"/>
            <Button Name="HelpButton" Content="Help" Margin="5" Click="HelpButton_Click"  HorizontalAlignment="Left" Width="50"/>
        </StackPanel>

        <Button Content="Save" Click="SaveButton_Click" Grid.Row="2" Grid.Column="2" Margin="5" Height="19.96" VerticalAlignment="Bottom"/>
        <Button Content="Close" Click="CloseButton_Click" Grid.Row="2" Margin="5" Height="19.96" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
